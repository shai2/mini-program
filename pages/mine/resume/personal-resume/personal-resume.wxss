.top{background:#fff;padding:0 15px 25px;margin-bottom:10px;position:relative;}
.top .edit{position:absolute;right:15px;top:15px;}
.avatar-box{padding:30px 0 40px 0;}
.name{margin-top:18px;color:#394763;font-weight:bold;}
.base-info{margin-top:15px;color:#c7cde3;font-size:12px;}
.base-info text{margin-right:20px;position:relative;}
.base-info text:nth-child(n+2):after{content:'';display:block;position:absolute;left:-10px;top:3px;width:1px;height:12px;background:#c7cde3;}
.skill-box{padding:20px 0px;}
.skill-box text:nth-child(n+2){margin-left:13px;}
.advantage-box{position:relative;padding:25px 0;}
.full-page-flex{padding-bottom:0px;}
.title-icon{width:10px;height:10px;}
.tip-left{width:12px;margin-right:5px;}
.tip-right{width:12px;margin-left:5px;}
.close-icon{margin-top:5px;}
.shadow-top{position:relative;}
.shadow-text-top,.shadow-text-bottom{position:absolute;left:0;right:0;text-align:center;color:#db2b30;font-size:12px;}
.shadow-text-top{top:60px;}
.shadow-text-bottom{top:90px;}
.money{font-size:30px;margin-right:5px;}