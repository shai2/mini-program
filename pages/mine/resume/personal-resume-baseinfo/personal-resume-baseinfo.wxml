<view>
    <view>
        <myline-with-icon title="更换头像" hasTopBorder="{{false}}" showLeftIcon="" showRightIcon="">
            <image style="width:60px;height:60px;margin-right:12px;border-radius:50%;" src="{{userInfo.avatarUrl}}"></image>
        </myline-with-icon>

        <myline-with-icon title="真实姓名" bindinput="nameChange" showLeftIcon="" showRightIcon="">
            <input class="myline-text" value="{{userInfo.nickName}}" placeholder="请输入真实姓名" placeholder-class="placeholder"/>
        </myline-with-icon>

        <picker bindchange="sexChange" range="{{sexOption}}">
            <myline-with-icon title="性别" showLeftIcon="">
                <text class="myline-text">{{userInfo.gender}}</text>
            </myline-with-icon>
        </picker>

        <picker bindchange="birthdayChange" mode="date">
            <myline-with-icon title="生日" showLeftIcon="">
                <text class="myline-text">{{userInfo.birthday}}</text>
            </myline-with-icon>
        </picker>

        <picker bindchange="regionChange" mode="region">
            <myline-with-icon title="所在地区" showLeftIcon="">
                <text class="myline-text">{{userInfo.province}} · {{userInfo.city}} · {{userInfo.area}}</text>
            </myline-with-icon>
        </picker>

        <view class="mgtop10"></view>

        <picker bindchange="onBoardDateChange" range="{{onBoardDateOption}}">
            <myline-with-icon title="到岗时间" hasTopBorder="{{false}}" showLeftIcon="">
                <text class="myline-text">{{userInfo.onBoardDate}}</text>
            </myline-with-icon>
        </picker>

        <view class="mgtop10"></view>

        <myline-with-icon title="手机号码" hasTopBorder="{{false}}" showLeftIcon="" showRightIcon="">
            <input class="myline-text" value="{{userInfo.nickName}}" placeholder="请输入手机号码" placeholder-class="placeholder"/>
        </myline-with-icon>

        <myline-with-icon title="联系邮箱" bindinput="emailChange" showLeftIcon="" showRightIcon="">
            <input class="myline-text" value="{{userInfo.nickName}}" placeholder="请输入联系邮箱" placeholder-class="placeholder"/>
        </myline-with-icon>
    </view>
    <view class="button-container-normal">
        <my-button text="保存" bindtap="saveBaseInfo"></my-button>
    </view>
</view>