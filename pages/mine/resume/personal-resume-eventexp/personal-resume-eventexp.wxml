<view>
    <view>
        <myline-with-icon title="项目名称" bindinput="nameChange" showLeftIcon="" showRightIcon="">
            <input class="myline-text" value="{{userInfo.nickName}}" placeholder="请输入项目名称" placeholder-class="placeholder"/>
        </myline-with-icon>
        <myline-with-icon title="职位名称" bindinput="nameChange" showLeftIcon="" showRightIcon="">
            <input class="myline-text" value="{{userInfo.nickName}}" placeholder="请输入职位名称" placeholder-class="placeholder"/>
        </myline-with-icon>

        <picker bindchange="birthdayChange" mode="date">
            <myline-with-icon title="入职时间" showLeftIcon="">
                <text class="myline-text">{{}}</text>
            </myline-with-icon>
        </picker>
        <picker bindchange="birthdayChange" mode="date">
            <myline-with-icon title="离职时间" showLeftIcon="">
                <text class="myline-text">{{}}</text>
            </myline-with-icon>
        </picker>
        <text class="title-nobg">工作职责</text>
        <textarea auto-height bindblur="" placeholder="请输入" placeholder-class="placeholder"/>
    </view>
    <view class="button-container-normal">
        <my-button text="保存" bindtap="save"></my-button>
        <view class="delete-button" bindtap="">删除</view>
    </view>
</view>