/* ------布局部分------ */
view,text,button,input,textarea,image{box-sizing:border-box;padding:0;}
.flex{
    flex: 1 1 auto;
}
.flex-row-center{
    display:flex;
    flex-direction:row;
    justify-content:center;
    align-items:center;
}
.flex-row-between{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
}
.flex-column-center{
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
}
.flex-column-between{
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    align-items:center;
}
.full{
  width:100%;height:100%;
}
.w100{width:100%!important;}
.h100{height:100%;}
.mgtop0{margin-top:0!important;}
.mgtop10{margin-top:10px!important;}
.mgtop20{margin-top:20px!important;}
.mgtop30{margin-top:30px!important;}
.mgbt10{margin-bottom:10px!important;}
.font14{font-size:14px!important;}
.dis-none{display:none;}
.block{display:block;width:100%;height:100%;}
.inline{display:inline;}
.inline-block{display:inline-block;}
.icon{width:10px;height:10px;}
/*------样式部分------ */
.border-top{border-top:1px solid #e4e9f0;}
.search-box{width:675rpx;}
/* ------组件化部分------ */
/**默认在中间的container**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0rpx;
  box-sizing: border-box;
}
.search-box{
  border:1px solid #d7dee2;
  border-radius:100px;
  padding:5px 20px 7px;
  font-size:14px;
}
.search-box-txt{
  margin-right:10px;
  position:relative;
}
.search-box-txt:after{
  position:absolute;
  right:-30px;
  top:3px;
  content:'';
  display:block;
  width:1px;
  height:16px;
  background:#d7dee2;
}
.search-box-input{
  margin-left:20px;
}
.mybutton{
  text-align:center;
  border-radius:6px;
  line-height:45px;
  font-size:15px;
  background:#29a1f7;
  color:#fff;
}
.mybutton.disabled{
  background:#ecf1f3;
}
