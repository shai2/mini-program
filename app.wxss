/*------样式部分------ */
.border-top{border-top:1px solid #e4e9f0;}
.search-box{width:675rpx;}
/* ------组件化部分------ */
/**默认在中间的container**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0rpx;
  box-sizing: border-box;
}
.search-box{
  border:1px solid #d7dee2;
  border-radius:100px;
  padding:5px 20px 7px;
  font-size:14px;
  flex:0 0;
}
.search-box-txt{
  margin-right:10px;
  position:relative;
}
.search-box-txt:after{
  position:absolute;
  right:-30px;
  top:3px;
  content:'';
  display:block;
  width:1px;
  height:16px;
  background:#d7dee2;
}
.search-box-input{
  margin-left:20px;
}
.mybutton{
  text-align:center;
  border-radius:6px;
  line-height:45px;
  font-size:15px;
  background:#29a1f7;
  color:#fff;
}
.mybutton.disabled{
  background:#ecf1f3;
}