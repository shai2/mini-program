.flex-row-between{display:flex;flex-direction:row;justify-content:space-between;align-items:center;}
.has-bottom{margin-bottom:10px;}
.has-border{border-bottom:1px solid #f3f5f7;}
.item{
  width:100%;
  background:#fff;
  padding:20px 15px;
}
.name{
  font-size:18px;
  font-weight:bold;
}
.salary{
  font-size:18px;
  color:#ff824b;
}

.middle{
  font-size:12px;
  color:#909ba3;
  margin-top: 5px;
}
.middle text:nth-child(n+2){
  margin-left:20px;
  position:relative;
}
.middle text:nth-child(n+2):before{
  content:'';
  display:block;
  position:absolute;
  width:1px;
  left:-10px;
  top:5px;
  bottom:3px;
  background:#e9eef5;
}

.bottom{
  margin-top:20px;
  font-size:12px;
}
.company{
  color:#909ba3;
}
.updata{
  color:#cbd4db;
}