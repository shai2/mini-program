.flex-row-between{display:flex;flex-direction:row;justify-content:space-between;align-items:center;}
.has-bottom{margin-bottom:10px;}
.has-border{border-bottom:1px solid #f3f5f7;}
.item{
  width:100%;
  background:#fff;
  padding:20px 15px;
  align-items:flex-start;
}
.name{
  font-size:15px;
  font-weight:bold;
  display:block;
  color:#374665;
}
.industry{
  font-size:12px;
  color:#909ba3;
}

.bottom{
  font-size:12px;
  color:#909ba3;
  margin-top: 5px;
}
.text-item:nth-child(2){
  margin-left:20px;
  position:relative;
}
.text-item:nth-child(2):before{
  content:'';
  display:block;
  position:absolute;
  width:1px;
  left:-10px;
  top:5px;
  bottom:3px;
  background:#e9eef5;
}
.updata{
  color:#ff824b;
}
.right{
  flex:1 1;
  margin-left:10px;
}
.company-avatar{width:45px;height:45px;border-radius:2px;margin-right:5px}