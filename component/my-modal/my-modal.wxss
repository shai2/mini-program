.flex-column-center{
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
}
.flex-row-center{
    display:flex;
    flex-direction:row;
    justify-content:center;
    align-items:center;
}
.bg{
    background:rgba(0,0,0,0.4);
    position:fixed;
    top:0;
    bottom:0;
    left:0;
    right:0;
    z-index:100;
}
.card{
    background:#fff;
    border-radius:10px;
    overflow:hidden;
}
.card-top{
    position:relative;
    width:310px;
    height:105px;
}
.getinfobutton{
    padding:0 20px;
    background:#29a1f7;
    display:inline-block;
    color:#fff;
    margin:25px 0;
    width:200px;
    font-size:15px;
}